{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@base/*": ["./base/*"],
      "@pages/*": ["./pom/pages/*"],
      "@components/*": ["./pom/components/*"],
      "@data/*": ["./data/*"],
      "@preconditions/*": ["./utils/preconditions/*"]
    }
  }
}
